body	{
	margin: 0;	
	background: url(<%= asset_path 'bg-settings.png' %>) repeat;
}
h1 {
	display: block;
	width: 100%;
	height: 44px;
	background: url(<%= asset_path 'bg.png' %>) repeat-x center top;
	color: #fff;
	text-shadow: rgba(0, 0, 0, 0.6) 0px -1px 0px;
	font-size: 20px;
	text-align: center;
	line-height: 44px;
	margin: 0;
}

