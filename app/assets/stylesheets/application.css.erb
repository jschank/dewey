body   
{
    margin: 0;
	background: #e2e2e2;
}
h1 
{
	color: #fff;
	background: url(<%= asset_path 'h1-bg.png' %>) repeat-x left top;
	font: bold 1.5em Helvetica, sans-serif;
	text-align: center;
	text-transform: uppercase;
	margin: 0 0 0 0;
	padding: 10px 0 0 0;
	height: 44px;
}
#search
{
	margin: 10px;
	height: 44px;
	text-align: center;	
	border-radius: 5px;
}
.boxIndex, .boxSpecific
{
	background: #fff;
	margin: 10px;
	padding: 0;
	border: 2px solid #b8b8b8;
	border-radius: 5px;	
	box-shadow: 0px 0px 10px #bbb;
}
.boxIndex h2	{
	color: #000;
	font: bold 1em Helvetica, sans-serif;
	margin: 0 0 0 0;
	padding: 5px;
	text-align: center;
	border-top-left-radius: 3px;
	border-top-right-radius: 3px;
	background: #f4f4f4;
}

.boxIndex a
{
	display: block;
	border-top: 2px solid #e6e6e6;
	padding: 10px 10px 10px 70px;
	min-height: 60px;
	text-decoration: none;	
}

.boxIndex .event_name, .boxSpecific .event_name	
{
	margin: 0;
	font: bold 1em Helvetica, sans-serif;
	color: #000;
	text-align: left;
}

.boxIndex .event_feature	
{
	font: normal 1em Helvetica, sans-serif;
	color: #000;
	margin: 0;
}

.boxIndex .event_times
{
	font: normal 1em Helvetica, sans-serif;
	color: #999;
	margin: 0;
}


.boxSpecific .specificHeader	{
	margin: 0 0 0 0;
	padding: 10px 10px 10px 70px;
	text-align: left;
	border-top-left-radius: 3px;
	border-top-right-radius: 3px;
	background: #f4f4f4;
	min-height: 50px;
}

.boxSpecific .event_times
{
	font: normal 1em Helvetica, sans-serif;
	color: #000;
	margin: 0;
}

.boxSpecific .event_description	
{
	padding: 0;
	margin: 0;
	font: italic .8em Helvetica, sans-serif;
	color: #999;
}

.boxSpecific .event_venue	
{
	display: block;
	border-top: 2px solid #e6e6e6;
	background: url(<%= asset_path 'arrow.png' %>) no-repeat right center;
	padding: 10px;
	text-decoration: none;
	margin: 0;
	font: normal 1em Helvetica, sans-serif;
	color: #000;
}

.boxSpecific .event_act	
{
	display: block;
	border-top: 2px solid #e6e6e6;
	background: url(arrow.png) no-repeat right center;
	padding: 10px;
	text-decoration: none; margin: 0;
	font: normal 1em Helvetica, sans-serif;
	color: #000;
}

.boxSpecific .webLinks	
{
	height: 60px;
	margin: 0;
	padding: 0;
	background: #f4f4f4;
	border-top: 2px solid #e6e6e6;
}

.webLinks .webAnchor
{
	display: block;
	float: left;
	border-right: 2px solid #e6e6e6;
	height: 60px;
	width: 33%;
	margin: 0;
	padding: 0;
}


.webLinks .webSite
{
	background: url(<%= asset_path 'web-logo-sm.png' %>) no-repeat center center;
}
.webLinks .facebook
{
	background: url(<%= asset_path 'facebook-logo-sm.png' %>) no-repeat center center;
}
.webLinks .twitter
{
	background: url(<%= asset_path 'twitter-logo-sm.png' %>) no-repeat center center;
	border-right: none;
}
	

