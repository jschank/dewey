body   
{
    margin: 0;
	background: #ccc;
}

.boxIndex, .boxSpecific
{
	border-top: 1px solid #949494;
	background: #fff;
	margin: 0;
	padding: 0;
}

/*Header Tags*/

h1 
{
	color: #fff;
	background: url(<%= asset_path 'h1-bg.png' %>) repeat-x left top;
	font: bold 15pt Georgia, "Times New Roman", Times, serif;
	letter-spacing: .1em;
	text-align: center;
	margin: 0;
	padding: 12px 0 0 0;
	height: 32px;
	text-shadow: 0 -1px #888;
}

h2
{
	border-bottom: 1px solid #949494;
	background: url(<%= asset_path 'h2-bg.png' %>) repeat-x left top;
	margin: 0;
	padding: 3px 0 0 5px;
	font: bold 12pt Helvetica, sans-serif;
	color: #fff;
	text-align: left;
	text-shadow: 0 1px #000;
	height: 19px;
	overflow: hidden;
}

.inprogress h2
{
	background: url(<%= asset_path 'h2-inprogress-bg.png' %>) repeat-x left top;
}
.inprogress
{
	border-bottom: 2px solid #F00;
}

h3	{
	border-bottom: 1px solid #949494;
	color: #fff;
	font: bold 12pt Helvetica, sans-serif;
	margin: 0 0 0 0;
	padding: 2px 0 0 5px;
	text-align: left;
	background: url(<%= asset_path 'h3-bg.png' %>) repeat-x left top;
	height: 20px;
	text-shadow: 0 1px 2px #000;
	overflow: hidden;
}

h4
{
	margin: 0;
	font: bold 12pt Helvetica, sans-serif;
	color: #000;
	text-align: left;
}

h4.oneline
{
	padding-top: 25px;
	height: 15pt;
	overflow: hidden;
}

h5
{
	margin: 0;
	font: bold 10pt Helvetica, sans-serif;
	color: #9f1d21;
	text-align: left;
}

#search
{
	background: url(<%= asset_path 'search-bg.png' %>) repeat-x left top;
	margin: 0;
	height: 41px;
	text-align: center;	
}

.info
{
	padding: 3px 0px 3px 70px;
	width: auto;
}

.infoShow
{
	padding: 0;
	width: auto;
}

a.link_box
{
	display: block;
	border-bottom: 1px solid #949494;
	padding: 0 30px 0 0;
	text-decoration: none;
	background-image: url( <%= asset_path 'arrow.png' %> );
	background-position: right center;
	background-repeat: no-repeat;
	position: relative;
	overflow: auto;
}

a.link_box:nth-of-type(odd)
{
	background-color: #fff;
}

a.link_box:nth-of-type(even)
{
	background-color: #eee;
}

p	
{
	font: bold 10pt Helvetica, sans-serif;
	color: #000;
	margin: 0;
}

.dates
{
	font: bold 9pt Helvetica, sans-serif;
	color: #8a8a8a;
	margin-top: 1em;
}

.times
{
	font: bold 9pt Helvetica, sans-serif;
	color: #8a8a8a;
}

.cover
{
	font: bold 9pt Helvetica, sans-serif;
	color: #8a8a8a;
}

.visit
{
	font: bold 9pt Helvetica, sans-serif;
	color: #000;
	margin-top: 1em;
	clear: both;
}

.description	
{
	margin-bottom: 1em;
}
 
.description p	
{
	margin-top: 1em;
	font: italic 10pt Helvetica, sans-serif;
	color: #4b6798;
}

.description p:first-child	
{
	margin-top: 0;
}

.addDetails	
{
	margin-bottom: 0;
}
 
.addDetails p	
{
	margin-top: 0;
	font: 10pt Helvetica, sans-serif;
	color: #8a8a8a;
}

.addDetails strong	
{
	color: #000000;
}

.hometown	
{
	font: normal 8pt Helvetica, sans-serif;
	color: #000;
}

.formerly	
{
	color: #8a8a8a;
}

.specificHeader	{
	margin: 0 0 0 0;
	padding: 3px 3px 3px 3px;
	text-align: left;
	background: #eee;
	min-height: 100px;
	overflow: auto;
}

.webAnchor
{
	display: block;
	float: left;
	height: 32px;
	margin: 3px 7px 0 0;
}

.copyright
{
	font: normal 11pt Helvetica, sans-serif;
	color: #949494;
	margin: .5em 0;
	text-align: center;
	height: 65px;
}

.signout	{
	font: normal 11pt helvetica;
	text-shadow: none;	
}

img.large
{
	margin: 0 3px 3px 0;
	float: left;
	height: 100px;
	width: 100px;
	border: 1px solid #949494;	
}

img.small
{
	margin: 3px 3px 3px 3px;
	float: left;
	height: 60px;
	width: 60px;
	border: 1px solid #949494;	
}

table	{
	border-collapse: collapse;

}

td, th	{
	border: 1px solid #000;
	padding: 5px 10px;
	margin: 0;
}

tr.parent	{
	border-top: 3px solid #000;
	border-bottom: 1px solid #000;	
	background-color: #eee;
}

tr.child	{
	border-top: 1px solid #000;
	border-bottom: 1px solid #000;	
	background-color: #fff;
}

.form_addition	{
	margin-top: 20px;
	border-top: 1px solid #000;
	position: relative;
	padding-top: 20px;
}

.form_addition p.form_addition_header	{
	background-color: #fff;
	padding: 3px;
	position: absolute;
	top: -12px;
	left: 5px;
	font: bold 12pt helvetica;
}

#tabbarbg	{
	position: fixed;
	bottom: 0;
	width: 100%;
	height: 49px;
	background-image: url( <%= asset_path 'tabbar-bg.png' %> );
	background-repeat: repeat-x;
}

#tabbar	{
	margin: 0 auto;
	width: 256px;
	height: 49px;
	overflow: hidden;
}

#tabbar .schedules_on, #tabbar .acts_on, #tabbar .events_on, #tabbar .venues_on, #tabbar .festivals_on, #tabbar .schedules_off, #tabbar .acts_off, #tabbar .events_off, #tabbar .venues_off, #tabbar .festivals_off	{
border: none;
display: block;
width: 64px;
height: 49px;
background-image: url(<%= asset_path 'tabbar.png' %>);
float: left;
text-indent: -9999px;
}

#tabbar .schedules_off	{
background-position: 0px 0px;
}

#tabbar .schedules_on	{
background-position: 0px 49px;
}

#tabbar .acts_off	{
background-position: -65px 0px;
}

#tabbar .acts_on	{
background-position: -65px 49px;
}

#tabbar .events_off	{
background-position: -129px 0px;
}

#tabbar .events_on	{
background-position: -129px 49px;
}

#tabbar .venues_off	{
background-position: -193px 0px;
}

#tabbar .venues_on	{
background-position: -193px 49px;
}

#tabbar .festivals_off	{
/*background-position: -257px 0px;*/
}

#tabbar .festivals_on	{
/*background-position: -257px 49px;*/
}
