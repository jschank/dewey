p	
{
	font: bold 11pt Helvetica, sans-serif;
	color: #000;
	margin: 0;
}

.dates
{
	font: bold 10pt Helvetica, sans-serif;
	color: #8a8a8a;
}

.times
{
	font: bold 10pt Helvetica, sans-serif;
	color: #8a8a8a;
}

.cover
{
	font: bold 10pt Helvetica, sans-serif;
	color: #8a8a8a;
}

.description p	
{
	margin: 1em;
	font: italic 10pt Helvetica, sans-serif;
	color: #7988a3;
}

.description p:first-child	
{
	margin: 0;
}

.hometown	
{
	font: normal 8pt Helvetica, sans-serif;
	color: #000;
}

.formerly	
{
	color: #8a8a8a;
}

.specificHeader	{
	margin: 0 0 0 0;
	padding: 10px 10px 10px 10px;
	text-align: left;
	background: #eee;
	min-height: 100px;
	overflow: auto;
}

.webAnchor
{
	display: block;
	float: left;
	height: 32px;
	width: 32px;
	margin: 3px 7px 0 0;
}

.webSite
{
	background: url(<%= asset_path 'web-logo-sm.png' %>) no-repeat center center;
}
.facebook
{
	background: url(<%= asset_path 'facebook-logo-sm.png' %>) no-repeat center center;
}
.twitter
{
	background: url(<%= asset_path 'twitter-logo-sm.png' %>) no-repeat center center;
	margin-right: none;
}

.copyright
{
	font: normal 11pt Helvetica, sans-serif;
	color: #8a8a8a;
	margin: .5em 0 0 0;
	text-align: center;
}

img.large
{
-webkit-box-reflect: below 0px -webkit-gradient(linear, left top, left bottom, from(transparent), color-stop(50%, transparent), to(rgba(238,238,238,0.2)));
margin: 0 10px 50px 0;
float: left;
height: 100px;
width: 100px;	
}

img.small
{
margin: 0 5px 0 0;
float: left;
height: 60px;
width: 60px;	
}

