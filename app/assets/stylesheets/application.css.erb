/*
 * This is a manifest file that'll automatically include all the stylesheets available in this directory
 * and any sub-directories. You're free to add application-wide styles to this file and they'll appear at
 * the top of the compiled file, but it's generally better to create a new file per style scope.
 *= require_self
 *= require_tree .
*/

body   
{
    margin: 0;
	background: #ccc;
}

.boxIndex, .boxSpecific
{
	border-top: 1px solid #949494;
	background: #fff;
	margin: 0;
	padding: 0;
}

/*Header Tags*/

h1 
{
	color: #fff;
	background: url(<%= asset_path 'h1-bg.png' %>) repeat-x left top;
	font: bold 15pt Georgia, "Times New Roman", Times, serif;
	letter-spacing: .1em;
	text-align: center;
	margin: 0;
	padding: 12px 0 0 0;
	height: 32px;
	text-shadow: 0 -1px #888;
}

h3	{
	border-bottom: 1px solid #949494;
	color: #fff;
	font: bold 12pt Helvetica, sans-serif;
	margin: 0 0 0 0;
	padding: 2px 0 0 5px;
	text-align: left;
	background: url(<%= asset_path 'h2-bg.png' %>) repeat-x left top;
	height: 20px;
	text-shadow: 0 1px 2px #000;
	overflow: none;
}

h2
{
	border-bottom: 1px solid #949494;
	background: url(<%= asset_path 'h3-bg.png' %>) repeat-x left top;
	margin: 0;
	padding: 3px 0 0 5px;
	font: bold 12pt Helvetica, sans-serif;
	color: #fff;
	text-align: left;
	text-shadow: 0 1px #000;
	height: 19px;
	overflow: none;
}

h4
{
	margin: 0;
	font: bold 12pt Helvetica, sans-serif;
	color: #000;
	text-align: left;
}

h4.oneline
{
	padding-top: 20px;
	height: 15pt;
	overflow: hidden;
}

h5
{
	margin: 0;
	font: bold 10pt Helvetica, sans-serif;
	color: #9f1d21;
	text-align: left;
}

#search
{
	background: url(<%= asset_path 'search-bg.png' %>) repeat-x left top;
	margin: 0;
	height: 41px;
	text-align: center;	
}

.info
{
	padding: 3px 0px 3px 65px;
	width: auto;
}

.infoShow
{
	padding: 3px 0px 3px 108px;
	width: auto;
}

a.link_box
{
	display: block;
	border-bottom: 1px solid #949494;
	padding: 0 30px 0 0;
	text-decoration: none;
	background-image: url( <%= asset_path 'arrow.png' %> );
	background-position: right center;
	background-repeat: no-repeat;
	position: relative;
	overflow: auto;
}

a.link_box:nth-of-type(odd)
{
	background-color: #fff;
}

a.link_box:nth-of-type(even)
{
	background-color: #eee;
}

p	
{
	font: bold 10pt Helvetica, sans-serif;
	color: #000;
	margin: 0;
}

.dates
{
	font: bold 9pt Helvetica, sans-serif;
	color: #8a8a8a;
}

.times
{
	font: bold 9pt Helvetica, sans-serif;
	color: #8a8a8a;
}

.cover
{
	font: bold 9pt Helvetica, sans-serif;
	color: #8a8a8a;
}

.visit
{
	font: bold 9pt Helvetica, sans-serif;
	color: #000;
	margin-top: 1em;
	clear: both;
}

.description 	
{
	margin-bottom: 1em;
}

.description p	
{
	margin-top: 1em;
	font: italic 10pt Helvetica, sans-serif;
	color: #7988a3;
}

.description p:first-child	
{
	margin-top: 0;
}

.hometown	
{
	font: normal 8pt Helvetica, sans-serif;
	color: #000;
}

.formerly	
{
	color: #8a8a8a;
}

.specificHeader	{
	margin: 0 0 0 0;
	padding: 10px 10px 10px 10px;
	text-align: left;
	background: #eee;
	min-height: 100px;
	overflow: auto;
}

.webAnchor
{
	display: block;
	float: left;
	height: 32px;
	width: 32px;
	margin: 3px 7px 0 0;
}

.copyright
{
	font: normal 11pt Helvetica, sans-serif;
	color: #949494;
	margin: .5em 0;
	text-align: center;
}

img.large
{
	-webkit-box-reflect: below 0px -webkit-gradient(linear, left top, left bottom, from(transparent), color-stop(50%, transparent), to(rgba(238,238,238,0.2)));
	margin: 0 0 50px 0;
	float: left;
	height: 100px;
	width: 100px;
	border: none;	
}

img.small
{
	margin: 0 5px 0 0;
	float: left;
	height: 60px;
	width: 60px;
	border-right: 1px solid #949494;
	border-bottom: 1px solid #949494;
	border-left: none;
	border-top: none;
}

#tabbarbg	{
	width: 100%;
	height: 49px;
	background-image: url( <%= asset_path 'tabbar-bg.png' %> );
	background-repeat: repeat-x;
}

#tabbar	{
	margin: 0 auto;
	width: 320px;
	height: 49px;
}

#tabbar .schedule, #tabbar .acts, #tabbar .events, #tabbar .venues, #tabbar .festivals	{
border: none;
display: block;
width: 64px;
height: 49px;
background-image: url(<%= asset_path 'tabbar.png' %>);
float: left;
text-indent: -9999px;
}

#tabbar .schedule	{
background-position: 0px 0px;
}

#tabbar .acts	{
background-position: -65px 0px;
}

#tabbar .events	{
background-position: -129px 0px;
}

#tabbar .venues	{
background-position: -193px 0px;
}

#tabbar .festivals	{
background-position: -257px 0px;
}