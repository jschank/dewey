body   
{
    margin: 0;
    background: #e3e3e3 /*url(<%= asset_path 'pirelli.png' %>) fixed repeat left top*/;
}
h1 
{
	color: #fff;
	background: url(<%= asset_path 'h1-bg.png' %>) repeat-x left top;
	font: bold 3em Helvetica, sans-serif;
	text-align: center;
	text-transform: uppercase;
	margin: 0 0 0 0;
	padding: 20px 0 0 0;
	height: 68px;
}
h2	{
	color: #fff;
	font: bold 1.2em Helvetica, sans-serif;
	margin: 0 0 5px 0;
	padding: 5px;
	text-align: center;
	border-radius: 5px;
	background: url(<%= asset_path 'black-40.png' %>) repeat left top;
}

#search
{
	margin: 10px;
	height: 44px;
	text-align: center;	
	border-radius: 5px;
}
.boxIndex, .boxSpecific
{
	background: #fff;
	margin: 10px;
	padding: 5px;
	background: #e6e6e6;
	border-radius: 5px;	
}
.boxIndex a
{
	display: block;
	border-bottom: 1px solid #e6e6e6;
	padding: 18px 10px 10px 120px;
	min-height: 110px;
	text-decoration: none;	
}
.boxIndex a:last-of-type
{
	border-bottom: none;
}
.boxIndex .event_name	
{
	margin: 0;
	font: bold 2em Helvetica, sans-serif;
	color: #000;
	text-align: left;
}

.boxIndex .event_feature	
{
	font: normal 2em Helvetica, sans-serif;
	color: #000;
}

.boxIndex .event_feature:first-of-type	
{
	margin-top: .5em;
}

.boxIndex .event_times	
{
	font: normal 2em Helvetica, sans-serif;
	color: #999;
}
.boxSpecific .event_name	
{
	color: #fff;
	font: bold 1em Helvetica, sans-serif;
	margin: 0 0 5px 0;
	padding: 5px;
	text-align: center;
	background: url(black-40.png)
	repeat left top;
	border-radius: 5px;
}
.boxSpecific .event_description	
{
	padding: 7px 7px 7px 7px;
	margin: 0 0 0 135px;
	font: italic 1em Helvetica, sans-serif;
	color: #fff;
}
.boxSpecific .event_venue	
{
	display: block;
	border-top: 1px dashed #8c8c8c;
	border-bottom: 1px dashed #8c8c8c;
	background: url(<%= asset_path 'arrow.png' %>) no-repeat right center;
	padding: 7px 7px 7px 7px;
	text-decoration: none;
	margin: 0 0 0 135px;
	font: normal 1.2em Helvetica, sans-serif;
	color: #fff;
}

.boxSpecific .event_promotion	
{
	display: block;
	border-bottom: 1px dashed #8c8c8c;
	background: url(arrow.png) no-repeat right center;
	padding: 7px 7px 7px 7px;
	text-decoration: none; margin: 0 0 0 135px;
	font: normal 1em Helvetica, sans-serif;
	color: #fff;
}
