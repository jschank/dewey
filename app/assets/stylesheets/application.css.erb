body   
{
    margin: 0;
	background: #e2e2e2;
}

.boxIndex, .boxSpecific
{
	background: #fff;
	margin: 10px;
	padding: 0;
	border: 2px solid #7f7f7f;
	border-radius: 5px;	
	box-shadow: 0px 0px 10px #bbb;
}

h1 
{
	color: #fff;
	background: url(<%= asset_path 'h1-bg.png' %>) repeat-x left top;
	font: bold 1.5em Helvetica, sans-serif;
	text-align: center;
	text-transform: uppercase;
	margin: 0 0 0 0;
	padding: 10px 0 0 0;
	height: 44px;
}

#search
{
	margin: 10px;
	height: 44px;
	text-align: center;	
	border-radius: 5px;
}

h2	{
	color: #fff;
	font: bold 1em Helvetica, sans-serif;
	margin: 0 0 0 0;
	padding: 5px;
	text-align: center;
	background: #7f7f7f;
}

h2:first-of-type
{
	border-top-left-radius: 3px;
	border-top-right-radius: 3px;
}

.boxIndex a
{
	display: block;
	border-top: 2px solid #7f7f7f;
	padding: 10px 10px 10px 70px;
	min-height: 60px;
	text-decoration: none;	
}

h3
{
	margin: 0;
	font: bold 1em Helvetica, sans-serif;
	color: #000;
	text-align: left;
}

p	
{
	font: normal 1em Helvetica, sans-serif;
	color: #000;
	margin: 0;
}

.times
{
	font: normal 1em Helvetica, sans-serif;
	color: #999;
	margin: 0;
}

.description	
{
	margin: 0;
	font: italic .8em Helvetica, sans-serif;
	color: #999;
}

a.act_box, a.venue_box	
{
	display: block;
	border-top: 2px solid #7f7f7f;
	background: url(<%= asset_path 'arrow.png' %>) no-repeat right center;
	padding: 10px;
	text-decoration: none;
	margin: 0;
	font: normal 1em Helvetica, sans-serif;
	color: #000;
}

.specificHeader	{
	margin: 0 0 0 0;
	padding: 10px 10px 10px 120px;
	text-align: left;
	border-top-left-radius: 3px;
	border-top-right-radius: 3px;
	background: #f4f4f4;
	min-height: 100px;
}

.webLinks	
{
	height: 60px;
	margin: 0;
	padding: 0;
	background: #f4f4f4;
	border-top: 2px solid #7f7f7f;
	border-bottom-left-radius: 3px;
	border-bottom-right-radius: 3px;
}

.webLinks .webAnchor
{
	display: block;
	float: left;
	border-right: 2px solid #7f7f7f;
	height: 60px;
	width: 33%;
	margin: 0;
	padding: 0;
}

.webLinks .webSite
{
	background: url(<%= asset_path 'web-logo-sm.png' %>) no-repeat center center;
}
.webLinks .facebook
{
	background: url(<%= asset_path 'facebook-logo-sm.png' %>) no-repeat center center;
}
.webLinks .twitter
{
	background: url(<%= asset_path 'twitter-logo-sm.png' %>) no-repeat center center;
	border-right: none;
}
