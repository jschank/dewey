/*
 * This is a manifest file that'll automatically include all the stylesheets available in this directory
 * and any sub-directories. You're free to add application-wide styles to this file and they'll appear at
 * the top of the compiled file, but it's generally better to create a new file per style scope.
 *= require_self
 *= require_tree .
*/

body   
{
    margin: 0;
	background: #e2e2e2;
	background: url(<%= asset_path 'bg.png' %>) fixed repeat left top;
}

.boxIndex, .boxSpecific
{
	border-top: 1px solid #e2e2e2;
	border-bottom: 1px solid #e2e2e2;
	background: #fff;
	margin: 0;
	padding: 0;
}

.boxSpecific
{
	border-bottom: none;
}

h1 
{
	color: #fff;
	background: url(<%= asset_path 'h1-bg.png' %>) repeat-x left top;
	font: bold 15pt Helvetica, sans-serif;
	text-align: center;
	text-transform: uppercase;
	margin: 0 0 0 0;
	padding: 12px 0 0 0;
	height: 32px;
	text-shadow: 0 -1px #888;
}

h2	{
	color: #fff;
	font: bold 12pt Helvetica, sans-serif;
	margin: 0 0 0 0;
	padding: 0 0 0 10px;
	text-align: left;
	background: url(<%= asset_path 'h2-bg.png' %>) repeat-x left top;
	height: 21px;
	text-shadow: 0 1px 2px #000;
}

h3
{
	background: url(<%= asset_path 'h3-bg.png' %>) repeat-x left top;
	margin: 0;
	padding: 3px 0 0 10px;
	font: bold 12pt Helvetica, sans-serif;
	color: #fff;
	text-align: left;
	text-shadow: 0 1px #000;
	height: 19px;
}

h4
{
	margin: 0;
	font: bold 14pt Helvetica, sans-serif;
	color: #000;
	text-align: left;
}

h5
{
	margin: 0;
	font: bold 13pt Helvetica, sans-serif;
	color: #9f1d21;
	text-align: left;
}

#search
{
	background: url(<%= asset_path 'search-bg.png' %>) repeat-x left top;
	margin: 0;
	height: 41px;
	text-align: center;	
}

.boxIndex a
{
	display: block;
	border-top: 1px solid #e6e6e6;
	border-bottom: 1px solid #e6e6e6;
	padding: .25em 30px .3em 60px;
	min-height: 50px;
	text-decoration: none;
	background-position: left top, right center;
	background-repeat: no-repeat, no-repeat;
}

.boxIndex a:last-child
{
	border-bottom: none;
}

.boxIndex a:nth-of-type(odd), a.act_box:nth-of-type(odd), a.venue_box:nth-of-type(odd)
{
	background-color: #dddee0;
}

.boxIndex a:nth-of-type(even), a.act_box:nth-of-type(even), a.venue_box:nth-of-type(even)
{
	background-color: #cbcccf;
}

.boxIndex a.odd
{
	background-color: #dddee0;
}

.boxIndex a.
{
	background-color: #cbcccf;
}

p	
{
	font: bold 11pt Helvetica, sans-serif;
	color: #000;
	margin: 0;
}

.times
{
	font: bold 10pt Helvetica, sans-serif;
	color: #8a8a8a;
	margin: 0 0 .5em 0;
}

.dates
{
	font: bold 10pt Helvetica, sans-serif;
	color: #8a8a8a;
}

.cover
{
	font: bold 10pt Helvetica, sans-serif;
	color: #8a8a8a;
}

a .times:last-of-type
{
	margin: 0;
}

.description p	
{
	margin: 1em;
	font: italic 10pt Helvetica, sans-serif;
	color: #FFF;
}

.hometown	
{
	margin: 0;
	font: italic 8pt Helvetica, sans-serif;
	color: #000;
}

a.act_box, a.venue_box	
{
	display: block;
	border-top: 1px solid #e6e6e6;
	border-bottom: 1px solid #e6e6e6;
	padding: 5px 30px 5px 60px;
	min-height: 40px;
	text-decoration: none;
	margin: 0;
	font: normal 1em Helvetica, sans-serif;
	color: #000;
	background-position: left top, right center;
	background-repeat: no-repeat, no-repeat;
}

.specificHeader	{
	margin: 0 0 0 0;
	padding: 10px 10px 10px 10px;
	text-align: left;
	background: #cbcccf;
	min-height: 100px;
	overflow: auto;
}

.webAnchor
{
	display: block;
	float: left;
	height: 32px;
	width: 32px;
	margin: 3px 7px 0 0;
}

.webSite
{
	background: url(<%= asset_path 'web-logo-sm.png' %>) no-repeat center center;
}
.facebook
{
	background: url(<%= asset_path 'facebook-logo-sm.png' %>) no-repeat center center;
}
.twitter
{
	background: url(<%= asset_path 'twitter-logo-sm.png' %>) no-repeat center center;
	margin-right: none;
}

.copyright
{
	font: normal 11pt Helvetica, sans-serif;
	color: #8a8a8a;
	margin: .5em 0 0 0;
	text-align: center;
}

a.act_index, a.venue_index, a.event_index
{
	display: block;
	border-top: 1px solid #e6e6e6;
	border-bottom: 1px solid #e6e6e6;
	padding: 0 30px 0 60px;
	min-height: 50px;
	text-decoration: none;
	background-color: #000;
	background-position: left top, right center;
	background-repeat: no-repeat, no-repeat;
}

a.act_index:nth-of-type(odd), a.venue_index:nth-of-type(odd), a.event_index:nth-of-type(odd)
{
	background-color: #dddee0;
}

a.act_index:nth-of-type(even), a.venue_index:nth-of-type(even), a.event_index:nth-of-type(even)
{
	background-color: #cbcccf;
}

