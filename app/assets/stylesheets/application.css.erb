body   
{
    margin: 0;
	background: #eee;
}

.boxIndex, .boxSpecific
{
	border-top: 1px solid #949494;
	background: #fff;
	margin: 0;
	padding: 0;
}

h1 
{
	color: #fff;
	background: url(<%= asset_path 'h1-bg.png' %>) repeat-x left top;
	font: bold 15pt Helvetica, sans-serif;
	text-align: center;
	text-transform: uppercase;
	margin: 0 0 0 0;
	padding: 12px 0 0 0;
	height: 32px;
	text-shadow: 0 -1px #888;
}

h2	{
	border-bottom: 1px solid #949494;
	color: #fff;
	font: bold 12pt Helvetica, sans-serif;
	margin: 0 0 0 0;
	padding: 2px 0 0 5px;
	text-align: left;
	background: url(<%= asset_path 'h2-bg.png' %>) repeat-x left top;
	height: 20px;
	text-shadow: 0 1px 2px #000;
}

h3
{
	border-bottom: 1px solid #949494;
	background: url(<%= asset_path 'h3-bg.png' %>) repeat-x left top;
	margin: 0;
	padding: 3px 0 0 5px;
	font: bold 12pt Helvetica, sans-serif;
	color: #fff;
	text-align: left;
	text-shadow: 0 1px #000;
	height: 19px;
}

h4
{
	margin: 0;
	font: bold 14pt Helvetica, sans-serif;
	color: #000;
	text-align: left;
}

h4.oneline
{
	padding-top: 20px;
	height: 15pt;
	overflow: none;
}

h5
{
	margin: 0;
	font: bold 13pt Helvetica, sans-serif;
	color: #9f1d21;
	text-align: left;
}

#search
{
	background: url(<%= asset_path 'search-bg.png' %>) repeat-x left top;
	margin: 0;
	height: 41px;
	text-align: center;	
}

.info
{
	padding: .3em 0;
	float: left;	
}

a.link_box
{
	display: block;
	border-bottom: 1px solid #949494;
	padding: 0 30px 0 0;
	min-height: 60px;
	text-decoration: none;
	background-image: url( <%= asset_path 'arrow.png' %> );
	background-position: right center;
	background-repeat: no-repeat;
	overflow: auto;
}

a.link_box:nth-of-type(odd)
{
	background-color: #fff;
}

a.link_box:nth-of-type(even)
{
	background-color: #eee;
}

