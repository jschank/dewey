<%= form_for @festival, :html => {:multipart => true} do |f| %>
  <% if @festival.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@festival.errors.count, "error") %> prohibited this festival from being saved:</h2>

      <ul>
      <% @festival.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div style="margin: 10px;">

	<div class="field">
		<%= f.file_field :logo %>
	</div>	

	<div class="field">
		<%= f.label :remote_logo_url, "or image URL", :style => "font: bold 10pt helvetica;"  %><br />
		<%= f.text_field :remote_logo_url, :style => "width: 280px;" %>
	</div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>

 <div class="field">
	<%= f.label :start %><br />
	<%= f.datetime_select :start %>
 </div>

 <div class="field">
	<%= f.label :end %><br />
	<%= f.datetime_select :end, :id => 'end_select', :include_blank => true  %> <%= submit_tag "Copy Start", :type => 'button', :id => 'copy_start' %> <%= submit_tag "Clear", :type => 'button', :id => 'clear_end' %>
 </div>

<% if false %>
<div class="form_addition">
	<p class="form_addition_header">Web Links:</p>
	<%= link_to_add_fields "Add Link", f, :links %>
    <%= f.fields_for :links do |builder| %>
    	<%= render "link_fields", :f => builder %>
    <% end %>
</div>  
<% end %>

  <div class="actions" style="padding: 20px 0;">
    <%= f.submit %>
  </div>

<% end %>
</div>

<script type="text/javascript">
    $(document).ready(function(){
		$("#clear_end").click(function(){
			$("#schedule_end_1i").val('');
			$("#schedule_end_2i").val('');
			$("#schedule_end_3i").val('');
			$("#schedule_end_4i").val('');
			$("#schedule_end_5i").val('');
			return false;
		});
		$("#copy_start").click(function(){
			$("#schedule_end_1i").val($("#schedule_start_1i").val());
			$("#schedule_end_2i").val($("#schedule_start_2i").val());
			$("#schedule_end_3i").val($("#schedule_start_3i").val());
			$("#schedule_end_4i").val($("#schedule_start_4i").val());
			$("#schedule_end_5i").val($("#schedule_start_5i").val());
			return false;
		});
        $("select#schedule_schedulable_type").change(populate_schedulables);
    });
</script>
