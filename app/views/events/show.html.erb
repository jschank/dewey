<p id="notice"><%= notice %></p>

<div class="fred">
    <%= image_tag image_path @event.logo if @event.logo %>
    <%= @event.name %>
    <%= @event.description %>

    <p>Venue</p>
    <% @venues.each do |venue, features| %>
        <%= link_to venue.name, venue_path(venue) %>

        <% features.each do |feature| %>
            <%= link_to feature.promotion.name, promotion_path(feature.promotion) %>
        <% end %>

    <% end %>
</div>

<h2>Upcoming <%= @event.name.pluralize %></h2>

<div class="events">
    <% @future_events.each do |event| %>
        <%= render 'upcoming_events', :event => event %>
    <% end %>
</div>

<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
