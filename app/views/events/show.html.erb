<p id="notice"><%= notice %></p>

<% specific_area do %>
<div class="specificHeader">
<img src="<%= logo_for(@event, :large) %>" class="large" />
<h4><%= @event.name %></h4>
<div class="description"><%= textilize(@event.description) %></div>
<% if @occurrence %>
	<%= display_cover_charge(@occurrence) %>
	<p><%= date_and_times(@occurrence.event_start) %></p>	
	<p class="times"><%= occurrence_times(@occurrence) %></p>	
<% end %>
<%= link_to "", @event.website, :target => "_blank", :class => "webAnchor webSite" %>
<%= link_to "", @event.facebook, :target => "_blank", :class => "webAnchor facebook" %>
<%= link_to "", @event.twitter, :target => "_blank", :class => "webAnchor twitter" %>

</div>
    
<% if @occurrence %>
	<%= content_tag :h3, pluralize(@occurrence.venues.count, "Venue") %>
	<% @occurrence.venues.each do |venue| %>
	<%= link_to venue_path(venue), :class => "link_box" do %>
		<img src="<%= logo_for(venue, :large) %>" class="small" />
		<h4 class="oneline"><%= venue.name %></h4>
	<% end %>
	<% end %>

	<%= content_tag :h3, pluralize(@occurrence.performances.count, "Performance") %>
	<% @occurrence.performances.each do |performance| %>
	<%= link_to act_path(performance.act), :class => "link_box" do %>
		<img src="<%= logo_for(performance.act, :large) %>" class="small" />
		<div class="info">
		<h4><%= performance.act.name %></h4>
		<p class="dates"><%= performance.performance_start.to_date.to_s(:long) %></p>
		<p class="times"><%= performance_times(performance) %></p>
	</div>
	<% end %>
    <% end %>
<% end %>

<% end %>

<% upcoming_area do %>
	<h2>Upcoming <%= @event.name.pluralize %></h2>
	<% @future_occurrences.group_by{ |o| o.event_start}.each do |date, occurrences_for_date | %>
		<% occurrences_for_date.each do |occurrence| %>
		<%= link_to current_event_path(occurrence.event, occurrence), :class => "link_box" do %>
		<img src="<%= logo_for(occurrence.venues[0], :large) %>" class="small" />
		<div class="info">
		<h4><%= date_and_times(date, occurrence) %></h4>
			<% occurrence.performances.each do |performance| %>
				<% if performance.priority > 0 %>
				<p><%= performance.act.name %></p>
				<% end %>
			<% end %>
		</div>
		<% end %>
	    <% end %>
	<% end %>
<% end %>

<% admin_area do %>
	<%= link_to 'Edit', edit_event_path(@event) %> |
	<%= link_to 'Back', events_path %>
<% end %>