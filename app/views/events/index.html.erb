<p id="notice"><%= notice %></p>

<% index_area do %>
<h2>Events</h2>
	<% @events.group_by{ |e| e.name.chars.first }.each do |letter, events| %>
		<h3><%= letter %></h3>
		<% events.each do |event| %>
		<%= link_to event_path(event), :class => "link_box" do %>
			<img src="<%= logo_for(event, :large) %>" class="small" />
			<h4 class="oneline"><%= event.name %></h4>
		<% end %>
		<% end %>
	<% end %>
<% end %>

<% admin_area do %>
	<%= link_to 'New Event', new_event_path %>
<% end %>