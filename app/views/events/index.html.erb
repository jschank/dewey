<p id="notice"><%= notice %></p>

<% index_area do %>
<h2>Events</h2>
	<% @events.group_by{ |e| e.name.chars.first }.each do |letter, events| %>
		<h3><%= letter %></h3>
		<% events.each do |event| %>
		<%= link_to event.name, event_path(event) %>
		<% end %>
	<% end %>
<% end %>

<% admin_area do %>
	<%= link_to 'New Event', new_event_path %>
<% end %>