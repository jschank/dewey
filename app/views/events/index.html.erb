<p id="notice"><%= notice %></p>

<% index_area do %>
<h2>Events</h2>
	<% @events.group_by{ |e| e.name.chars.first }.each do |letter, events| %>
		<h3><%= letter %></h3>
		<% events.each do |event| %>
		<%= link_to event_path(event), :style => "background-image: url(#{logo_for(event, :small)}), url(#{asset_path 'arrow.png'});", :class => "event_index" do %>
			<h4 style="padding-top: 15px; height: 15pt; overflow: none;"><%= event.name %></h4>
		<% end %>
		<% end %>
	<% end %>
<% end %>

<% admin_area do %>
	<%= link_to 'New Event', new_event_path %>
<% end %>