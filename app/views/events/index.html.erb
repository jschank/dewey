<% @title = "Events" %>
<% @events.group_by{ |e| e.name.chars.first }.each do |letter, events| %>
	<h2><%= letter %></h2>
	<% events.each do |event| %>
		<%= link_to event_path(event), :class => "link_box" do %>
  		<%= logo_image(event, :class => "small") %>
  		<h5 class="oneline"><%= event.name %></h5>
		<% end %>
	<% end %>
<% end %>
