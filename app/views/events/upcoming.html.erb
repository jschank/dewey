<% in_progress_area do %>
	<h2>Happening now (7/2/2011 @ 10pm)</h2>
	<% @happening_now.group_by{|p| p.occurrence}.each do |occurrence, performances| %>
		<div class="event">
			<a href=<%= current_event_path(occurrence.event, occurrence) %> style="background: url(<%= logo_for(occurrence.venues[0], :small) %>) no-repeat 10px 10px,  url(<%= asset_path 'arrow.png' %>) no-repeat right center;">
			<h4><%= occurrence.event.name %></h4>
			<% occurrence.acts.each do |act| %>
				<p><%= act.name %></p>
			<% end %>
			<p class="times"><%= occurrence_times(occurrence) %></p></a>
		</div>
	
	<% end %>
<% end %>

<% upcoming_area do %>
<% @future_performances.group_by{|p| p.performance_start.to_date}.sort.each do |start_date, performances_for_date| %>
		<h2><%= date_and_times(start_date) %></h2>
		<% performances_for_date.group_by {|p| p.occurrence}.each do |occurrence, performances_for_occurrence| %>
			<a href=<%= current_event_path(occurrence.event, occurrence) %> style="background: url(<%= logo_for(occurrence.venues[0], :small) %>) no-repeat 10px 10px,  url(<%= asset_path 'arrow.png' %>) no-repeat right center;">
			<h4><%= occurrence.event.name %></h4>
			<% performances_for_occurrence.each do |performance| %>
				<p><%= performance.act.name %></p>
			<% end %>
			<p class="times"><%= occurrence_times(occurrence) %></p></a>
		<% end %>
	<% end %>
<% end %>

<% admin_area do %>
	<%= link_to 'New Event', new_event_path %>
<% end %>
