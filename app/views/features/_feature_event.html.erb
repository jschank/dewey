<a href=<%= event_path(event) %> style="background: url(<%= image_path event.logo %>) no-repeat left 5px,  url(<%= asset_path 'arrow.png' %>) no-repeat right center;">
<h4 class="event_name"><%= event_name(event) %></h4>

<% features(event).each do |feature| %>
	<p class="event_feature"><%= feature.promotion.name %></p>
<% end %>
<p class="event_times"><%= event_times(event) %></p></a>
