
<% @dates.keys.each do |date| %>
	<h2><%= date.strftime("%A, %B %d, %Y") %></h2>
	<div class="events">
	<% @dates[date].each do |event| %>
		<%= render 'features/feature_event', :event => event %>
	<% end %>
	</div>
<% end %>


