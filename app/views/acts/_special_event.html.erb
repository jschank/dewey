<%= link_to current_event_path(performance.occurrence.event, performance.occurrence), :class => "link_box" do %>
	<img src="<%= logo_for(performance.venue) %>" class="small" />
	<div class="info">
		<%= content_tag :h4, performance.occurrence.event.name %>
		<%= content_tag :p, performance.act.name %>
		<p class="dates"><%= performance.performance_start.to_date.to_s(:long) %></p>
		<p class="times"><%= performance_times(performance) %></p>
		<%= display_cover_charge(performance.occurrence) %>	
	</div>
<% end %>
