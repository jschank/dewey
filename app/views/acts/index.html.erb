<p id="notice"><%= notice %></p>

<% index_area do %>
<h3>Acts</h3>
	<% @acts.group_by{ |a| sortable_name(a.name).chars.first }.each do |letter, acts| %>
		<h2><%= letter %></h2>
		<% acts.each do |act| %>
		<%= link_to act_path(act), :class => "link_box" do %>
		<%= logo_image(act, :class => "small") %>
			<h4 class="oneline"><%= act.name %> <% if act.formerly.present? %><em class="formerly"> - Formerly: <%= act.formerly %></em><%end%></h4>
			<% end %>
		<% end %>
	<% end %>
<% end %>


<% admin_area do %>
<h3>Acts Admin - <span class="signout"><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %></span></h3>
 
	<table>
	  <tr class="child">
	    <td colspan="5"><%= link_to 'New Act', new_act_path %></td>
	  </tr>
	  <tr>
	    <th>ID</th>
	    <th>Name</th>
	    <th colspan="3">Functions</th>
	  </tr>
 
	<% @acts.each do |act| %>
	  <tr class="parent">
	    <td><%= act.id %></td>
	    <td><%= act.name %></td>
	    <td><%= link_to 'Show', act %></td>
	    <td><%= link_to 'Edit', edit_act_path(act) %></td>
	    <td><%= link_to 'Remove', act, :confirm => 'Are you sure?', :method => :delete %></td>
	  </tr>
	<% end %>
	</table>

<% end %>
