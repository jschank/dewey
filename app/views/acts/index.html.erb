<p id="notice"><%= notice %></p>

<% index_area do %>
<h2>Acts</h2>
	<% histogram(@acts).each do |letter, acts| %>
		<h3><%= letter %></h3>
		<% acts.each do |act| %>
		<%= link_to act_path(act), :class => "link_box" do %>
		<%= logo_image(act, :class => "small") %>
			<h5 class="oneline"><%= act.name %> <% if act.formerly.present? %><em class="formerly"> - Formerly: <%= act.formerly %></em><%end%></h5>
			<% end %>
		<% end %>
	<% end %>
<% end %>


<% admin_area do %>
<h2>Acts Admin - <span class="signout"><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %></span></h2>
 
	<table>
	  <tr class="child">
	    <td colspan="5"><%= link_to 'New Act', new_act_path %></td>
	  </tr>
	  <tr>
	    <th>ID</th>
	    <th>Name</th>
	    <th colspan="3">Functions</th>
	  </tr>
 
	<% @acts.each do |act| %>
	  <tr class="parent">
	    <td><%= act.id %></td>
	    <td><%= act.name %></td>
	    <td><%= link_to 'Show', act %></td>
	    <td><%= link_to 'Edit', edit_act_path(act) %></td>
	    <td><%= link_to 'Remove', act, :confirm => 'Are you sure?', :method => :delete %></td>
	  </tr>
	<% end %>
	</table>

<% end %>
