<%= form_for @act do |f| %>
  <% if @act.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@act.errors.count, "error") %> prohibited this act from being saved:</h2>

      <ul>
      <% @act.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div style="margin: 10px;">
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :hometown %><br />
    <%= f.text_field :hometown %>
  </div>
  <div class="field">
    <%= f.label :formerly %><br />
    <%= f.text_field :formerly %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>  


<div id="links" style="margin-top: 20px; border-top: 1px solid #000;">
	<p style="background-color: #fff; padding: 3px; top: -15px;">Web Links:</p>
	<%= link_to_add_fields "Add Link", f, :links %>
    <%= f.fields_for :links do |builder| %>
    	<%= render "link_fields", :f => builder %>
    <% end %>
</div>  

  <div class="actions" style="padding: 20px 0;">
    <%= f.submit %>
  </div>
<% end %>
</div>