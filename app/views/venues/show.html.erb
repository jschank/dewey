<p id="notice"><%= notice %></p>

<div class="boxSpecific">
    <%= image_tag image_path @venue.logo if @venue.logo %>
    <h2><%= @venue.name %></h2>
    <p><%= @venue.description %></p>
    <p><%= @venue.address1 %><br/>
    <%= @venue.address2 if @venue.address2 %><br/>
    <%= @venue.city %>, <%= @venue.state %>  <%= @venue.zip %></p>
    <p>Phone: <%= @venue.phone %></p>
    <%= link_to "On the web", @venue.website, :target => "_blank" %>
</div>

<div class="boxIndex">
<h2>Upcoming Events at <%= @venue.name %></h2>
<% if false %>
<% @future_events_by_date.each do |start_date, events| %>
    <h2><%= start_date.strftime("%A, %B %d, %Y") %></h2>
    <div class="events">
    <% events.each do |event| %>
        <%= render 'upcoming_events', :event => event %>
    <% end %>
    </div>
<% end %>
<% end %>
</div>


