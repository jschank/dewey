<p id="notice"><%= notice %></p>

<% index_area do %>
<h2>Venues</h2>
	<% @venues.group_by{ |v| sortable_name(v.name).chars.first }.each do |letter, venues| %>
		<h3><%= letter %></h3>
		<% venues.each do |venue| %>
		<%= link_to venue_path(venue), :class => "link_box" do %>
			<img src="<%= logo_for(venue, :large) %>" class="small" />
			<h4 class="oneline"><%= venue.name %></h4>
		<% end %>
		<% end %>
	<% end %>
<% end %>

<% admin_area do %>
	<%= link_to 'New Venue', new_venue_path %>
<% end %>
