<p id="notice"><%= notice %></p>

<% index_area do %>
<h3>Venues</h3>
	<% @venues.group_by{ |v| sortable_name(v.name).chars.first }.each do |letter, venues| %>
		<h2><%= letter %></h2>
		<% venues.each do |venue| %>
		<%= link_to venue_path(venue), :class => "link_box" do %>
		<%= logo_image(venue, :class => "small") %>
			<h4 class="oneline"><%= venue.name %></h4>
		<% end %>
		<% end %>
	<% end %>
<% end %>

<% admin_area do %>
<h3>Venue Admin</h3>
 
<%= link_to 'New Venue', new_venue_path %> | <%= link_to "Sign Out", destroy_user_session_path, :method => :delete %>

<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th colspan="3">Functions</th>
  </tr>
 
<% @venues.each do |venue| %>
  <tr>
    <td><%= venue.id %></td>
    <td><%= venue.name %></td>
    <td><%= link_to 'Show', venue %></td>
    <td><%= link_to 'Edit', edit_venue_path(venue) %></td>
    <td><%= link_to 'Remove', venue, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<% end %>