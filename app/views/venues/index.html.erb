<p id="notice"><%= notice %></p>

<% index_area do %>
<h2>Venues</h2>
	<% @venues.group_by{ |v| sortable_name(v.name).chars.first }.each do |letter, venues| %>
		<h3><%= letter %></h3>
		<% venues.each do |venue| %>
		<%= link_to venue_path(venue), {:style => "background: url(#{logo_for(venue, :small)}) no-repeat 10px 10px, url(#{asset_path 'arrow.png'}) no-repeat right center;"} do %>
			<h4 style="padding-top: 17px;"><%= venue.name %></h4>
		<% end %>
		<% end %>
	<% end %>
<% end %>

<% admin_area do %>
	<%= link_to 'New Venue', new_venue_path %>
<% end %>
