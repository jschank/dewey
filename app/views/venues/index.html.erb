<p id="notice"><%= notice %></p>

<% index_area do %>
<h2>Venues</h2>
	<% @venues.group_by{ |v| sortable_name(v.name).chars.first }.each do |letter, venues| %>
		<h3><%= letter %></h3>
		<% venues.each do |venue| %>
		<%= link_to venue.name, venue_path(venue) %>
		<% end %>
	<% end %>
<% end %>

<% admin_area do %>
	<%= link_to 'New Venue', new_venue_path %>
<% end %>
