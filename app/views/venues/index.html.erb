<p id="notice"><%= notice %></p>

<% index_area do %>
<h2>Venues</h2>
	<% @venues.group_by{ |v| sortable_name(v.name).chars.first }.each do |letter, venues| %>
		<h2><%= letter %></h2>
		<% venues.each do |venue| %>
		<a href=<%= venue_path(venue) %> style="background: url(<%= logo_for(venue, :small) %>) no-repeat 10px 10px,  url(<%= asset_path 'arrow.png' %>) no-repeat right center;">
			<h3 style="padding-top: 20px;"><%= venue.name %></h3>
		</a>
		<% end %>
	<% end %>
<% end %>

<% admin_area do %>
	<%= link_to 'New Venue', new_venue_path %>
<% end %>
