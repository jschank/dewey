<h2>Events Admin - <span class="signout"><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %></span></h2>
 
<table>
  <tr class="child">
    <td colspan="5"><%= link_to 'New Event', new_admin_event_path %></td>
  </tr>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th colspan="3">Functions</th>
  </tr>
 
<% @events.each do |event| %>
  <tr class="parent">
    <td><%= event.id %></td>
    <td><%= event.name %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_admin_event_path(event) %></td>
    <td><%= link_to 'Remove', [:admin, event], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>

</table>
