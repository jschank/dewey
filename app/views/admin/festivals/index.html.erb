<h2>Festival Admin - <span class="signout"><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %></span></h2>
 
<table>
  <tr class="child">
    <td colspan="5"><%= link_to 'New Festival', new_admin_festival_path %></td>
  </tr>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th colspan="3">Functions</th>
  </tr>
 
<% @festivals.each do |festival| %>
  <tr class="parent">
    <td><%= festival.id %></td>
    <td><%= festival.name %></td>
    <td><%= link_to 'Show', festival %></td>
    <td><%= link_to 'Edit', edit_admin_festival_path(festival) %></td>
    <td><%= link_to 'Remove', [:admin, festival], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>

</table>
